@page "/"
@inherits IndexBase

<AuthorizeView>
    <Authorized>
        <h2>Home</h2>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titolo</th>
                    <th scope="col">Album</th>
                    <th scope="col">Durata</th>

                </tr>
            </thead>
            <tbody>
                @if (EleCanzoni != null)
                {


                    @foreach (var c in EleCanzoni)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@c.SongTitle</td>
                            <td>@c.AlbumName</td>
                            <td>@c.Duration</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <h2>Playlist</h2>



    </Authorized>
    <NotAuthorized>
        <h2>Loggati</h2>
    </NotAuthorized>
</AuthorizeView>


